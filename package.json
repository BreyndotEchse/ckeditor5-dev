{
  "name": "ckeditor5-dev",
  "version": "37.0.1",
  "private": true,
  "devDependencies": {
    "@ckeditor/ckeditor5-dev-ci": "^37.0.1",
    "@ckeditor/ckeditor5-dev-release-tools": "^37.0.1",
    "eslint": "^7.0.0",
    "eslint-config-ckeditor5": "^4.0.0",
    "glob": "^10.2.5",
    "husky": "^8.0.2",
    "lint-staged": "^10.2.4",
    "mocha": "^7.1.2",
    "nyc": "^15.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=5.7.1"
  },
  "author": "CKSource (http://cksource.com/)",
  "license": "GPL-2.0-or-later",
  "bugs": "https://github.com/ckeditor/ckeditor5-dev/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/ckeditor/ckeditor5-dev.git"
  },
  "homepage": "https://github.com/ckeditor/ckeditor5-dev#readme",
  "scripts": {
    "postinstall": "node ./scripts/postinstall.js",
    "test": "mocha 'packages/*/tests/**/*.js' --timeout 10000",
    "coverage": "nyc --reporter=lcov --reporter=text-summary yarn run test",
    "changelog": "node ./scripts/changelog.js",
    "release:prepare-packages": "node ./scripts/preparepackages.js",
    "release:publish": "node ./scripts/publishpackages.js.js",
    "lint": "eslint --quiet \"**/*.js\"",
    "precommit": "lint-staged",
    "clean": "npx rimraf package-lock.json yarn.lock ./**/node_modules",
    "reinstall": "yarn run clean && yarn install"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --quiet"
    ]
  },
  "eslintIgnore": [
    "coverage/**",
    "packages/*/node_modules/**"
  ],
  "workspaces": {
    "packages": [
      "packages/*",
      "."
    ]
  }
}
